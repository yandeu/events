{
  "name": "@yandeu/events",
  "version": "0.0.5",
  "description": "Simplified and TypeScripted version of EventEmitter3@4.0.7",
  "type": "commonjs",
  "main": "./cjs/index.js",
  "types": "./cjs/index.d.ts",
  "author": "Yannick Deubel (https://github.com/yandeu)",
  "license": "MIT",
  "homepage": "https://github.com/yandeu/events#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/yandeu/events.git"
  },
  "keywords": [
    "events",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/yandeu/events/issues"
  },
  "scripts": {
    "prepareRelease": "npm install && npm run build",
    "start": "npm run dev",
    "dev": "npm run build && npm-run-all --parallel dev:*",
    "dev:tsc-cjs": "tsc --project tsconfig.cjs.json --watch",
    "dev:tsc-esm": "tsc --project tsconfig.json --watch",
    "build": "npm run prune && npm-run-all build:* && node scripts/rename.cjs",
    "build:version": "npm run version",
    "build:tsc-cjs": "tsc --project tsconfig.cjs.json",
    "build:tsc-esm": "tsc --project tsconfig.json",
    "build:webpack": "webpack --config webpack.config.cjs",
    "test": "jest --collectCoverage",
    "version": "extract version /src/version.ts",
    "prune": "rimraf cjs esm umd",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@yandeu/extract": "^0.0.1",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  },
  "funding": {
    "url": "https://github.com/sponsors/yandeu"
  }
}
